{
  "name": "ianm.com",
  "description": "Ian Macalinao's personal website.",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "next lint",
    "dev": "next dev",
    "sitemap": "next-sitemap --config next-sitemap.config.mjs",
    "build": "next build && yarn sitemap",
    "build:analyze": "ANALYZE=1 next build",
    "build:static": "NEXT_PUBLIC_EXPORT_STATIC=1 yarn build",
    "typecheck": "tsc",
    "start": "next start",
    "postinstall": "husky install"
  },
  "browserslist": [
    "extends @saberhq/browserslist-config"
  ],
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@gr2m/gray-matter": "^4.0.3-with-pr-137",
    "disqus-react": "^1.1.5",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "next": "15.1.0",
    "next-mdx-remote": "^5.0.0",
    "next-seo": "^6.6.0",
    "prop-types": "^15.8.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-gtm-module": "^2.0.11",
    "react-intersection-observer": "^9.14.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "6.0.0",
    "tiny-invariant": "^1.3.3",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@emotion/babel-plugin": "^11.13.5",
    "@macalinao/eslint-config": "^1.0.1",
    "@macalinao/tsconfig": "^1.0.1",
    "@next/bundle-analyzer": "^15.1.0",
    "@next/env": "^15.1.0",
    "@next/eslint-plugin-next": "^15.1.0",
    "@saberhq/browserslist-config": "^3.4.3",
    "@svgr/webpack": "^8.1.0",
    "@types/eslint": "^9.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/react-gtm-module": "^2.0.4",
    "@types/webpack": "^5.28.5",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-twin": "^1.1.0",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.4.2",
    "resolve-typescript-plugin": "^2.0.1",
    "tailwindcss": "^3.4.16",
    "twin.macro": "^3.4.1",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1"
  },
  "prettier": {},
  "engines": {
    "node": ">=16.x"
  },
  "resolutions": {
    "react": "^19",
    "@types/react": "^19",
    "js-yaml": "4"
  },
  "lint-staged": {
    "*.{ts,tsx,mts,cts,cjs,mjs}": "eslint --fix --cache",
    "*.{css,md,json,webmanifest,yml,yaml,js,jsx}": "prettier --write"
  },
  "packageManager": "yarn@4.5.3"
}
