{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@saberhq/tsconfig/tsconfig.mono.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5",
    "paths": {
      "~*": ["./*"]
    },
    "incremental": true,
    "moduleResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.mjs",
    ".eslintrc.cjs",
    "*.cjs"
  ],
  "exclude": ["node_modules"]
}
